<Window x:Class="Communopoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Communopoly"
        mc:Ignorable="d"
        Title="Communopoly" Height="768" Width="1152" WindowStyle="SingleBorderWindow" ResizeMode="NoResize" BorderThickness="0,0,0,0">
    <Window.Resources>
        <SolidColorBrush x:Key="StartColor" Color="#19734f" />
        <SolidColorBrush x:Key="RepublicColor" Color="#9a1c19" />
        <SolidColorBrush x:Key="StationColor" Color="#fffcfc" />
        <SolidColorBrush x:Key="ChanceColor" Color="#7f0f70" />
        <SolidColorBrush x:Key="ReeducationColor" Color="#0088aa" />
        <SolidColorBrush x:Key="KatorgaColor" Color="#000000" />
        <SolidColorBrush x:Key="RedistributionColor" Color="#cc0000" />
        <SolidColorBrush x:Key="SiberiaColor" Color="#1b395d" />
        <SolidColorBrush x:Key="BoardBorderColor" Color="#ab734c" />
        <SolidColorBrush x:Key="BoardBackgroundColor" Color="#b9baa8" />
    </Window.Resources>
    <Grid x:Name="root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="20"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                    <ColumnDefinition Width="12*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>

                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>

                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="12*"></ColumnDefinition>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition Height="12*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>

                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>

                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="8*"></RowDefinition>
                    <RowDefinition Height="12*"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                </Grid.RowDefinitions>
                <Rectangle Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="15" Grid.RowSpan="15" Fill="{StaticResource BoardBorderColor}"/>

                <Rectangle Grid.Column="1" Grid.Row="1" Fill="{StaticResource KatorgaColor}" />
                <Rectangle Grid.Column="13" Grid.Row="1" Fill="{StaticResource RedistributionColor}" />
                <Rectangle Grid.Column="13" Grid.Row="13" Fill="{StaticResource StartColor}" />
                <Rectangle Grid.Column="1" Grid.Row="13" Fill="{StaticResource ReeducationColor}" />
                
                <Rectangle Grid.Column="2" Grid.Row="13" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="3" Grid.Row="13" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="4" Grid.Row="13" Fill="{StaticResource ChanceColor}"/>
                <Rectangle Grid.Column="5" Grid.Row="13" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="6" Grid.Row="13" Fill="{StaticResource BoardBorderColor}"/>
                <Rectangle Grid.Column="7" Grid.Row="13" Fill="{StaticResource StationColor}"/>
                <Rectangle Grid.Column="8" Grid.Row="13" Fill="{StaticResource BoardBorderColor}"/>
                <Rectangle Grid.Column="9" Grid.Row="13" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="10" Grid.Row="13" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="11" Grid.Row="13" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="12" Grid.Row="13" Fill="{StaticResource RepublicColor}"/>

                <Rectangle Grid.Column="1" Grid.Row="2" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="3" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="4" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="5" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="6" Fill="{StaticResource BoardBorderColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="7" Fill="{StaticResource StationColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="8" Fill="{StaticResource BoardBorderColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="9" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="10" Fill="{StaticResource ChanceColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="11" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="1" Grid.Row="12" Fill="{StaticResource RepublicColor}"/>

                <Rectangle Grid.Column="2" Grid.Row="1" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="3" Grid.Row="1" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="4" Grid.Row="1" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="5" Grid.Row="1" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="6" Grid.Row="1" Fill="{StaticResource BoardBorderColor}"/>
                <Rectangle Grid.Column="7" Grid.Row="1" Fill="{StaticResource StationColor}"/>
                <Rectangle Grid.Column="8" Grid.Row="1" Fill="{StaticResource BoardBorderColor}"/>
                <Rectangle Grid.Column="9" Grid.Row="1" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="10" Grid.Row="1" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="11" Grid.Row="1" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="12" Grid.Row="1" Fill="{StaticResource RepublicColor}"/>

                <Rectangle Grid.Column="13" Grid.Row="2" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="3" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="4" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="5" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="6" Fill="{StaticResource BoardBorderColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="7" Fill="{StaticResource StationColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="8" Fill="{StaticResource BoardBorderColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="9" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="10" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="11" Fill="{StaticResource RepublicColor}"/>
                <Rectangle Grid.Column="13" Grid.Row="12" Fill="{StaticResource RepublicColor}"/>
                
                <Border Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="11" Grid.RowSpan="11" BorderThickness="20" BorderBrush="{StaticResource BoardBorderColor}">
                    <Rectangle  Fill="{StaticResource BoardBackgroundColor}"/>
                </Border>

            </Grid>
        </Grid>
    </Grid>
</Window>
